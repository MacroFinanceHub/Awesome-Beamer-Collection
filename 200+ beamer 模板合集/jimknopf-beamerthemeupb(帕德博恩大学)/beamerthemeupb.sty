% The theme uses tikz for drawing.
\NeedsTeXFormat{LaTeX2e}
\RequirePackage{tikz}
\RequirePackage{xcolor}

\ProvidesPackage{beamerthemeupb}[2013/07/21 Unofficial beamer theme of the University of Paderborn (Version 0.2)]

\mode<presentation>

% Load modified color and outer themes.
\usecolortheme{upb}
\useoutertheme{upb}

% Use default themes for the rest.
\usefonttheme{default}
\useinnertheme{default}

% Navigation symbols do not work / are ugly with this theme, deactivate them!
\setbeamertemplate{navigation symbols}{}

\mode<all>
