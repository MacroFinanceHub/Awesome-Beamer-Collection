\newdimen\ul@depth

\def\underline#1{%
\par\noindent
\@tempdima=\textwidth
\advance\@tempdima by \beamer@leftmargin
\advance\@tempdima by \beamer@rightmargin
\setbox0=\hbox to \@tempdima{\hspace*{\beamer@leftmargin}#1\hfill}%
\hspace*{-\beamer@leftmargin}%
\global\ul@depth=\dp0%
\hbox to \@tempdima{\vbox{\box0\vskip-\ul@depth\hrule}}%
}

\def\underlinegap#1{%
\par\noindent
\@tempdima=\textwidth
\advance\@tempdima by \beamer@leftmargin
\advance\@tempdima by \beamer@rightmargin
\setbox0=\hbox to \@tempdima{\hspace*{\beamer@leftmargin}#1\hfill}%
\hspace*{-\beamer@leftmargin}%
\global\ul@depth=-0.4cm%
\hbox to  \@tempdima{\vbox{\box0\vskip-\ul@depth\color{GhostWhite}{\hrule}}}%
}


